<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Main Story Image -->
    <ImageView
        android:id="@+id/storyImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_5"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Header Overlay -->
    <LinearLayout
        android:id="@+id/headerOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header_gradient"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Status bar spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Story Progress Bars -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <!-- Progress bar 1 (completed) -->
            <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:background="@drawable/progress_bar_completed" />

            <!-- Progress bar 2 (completed) -->
            <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:background="@drawable/progress_bar_completed" />

            <!-- Progress bar 3 (current) -->
            <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:background="@drawable/progress_bar_current" />

            <!-- Progress bar 4 (pending) -->
            <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:background="@drawable/progress_bar_pending" />

            <!-- Progress bar 5 (pending) -->
            <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:background="@drawable/progress_bar_pending" />
        </LinearLayout>

        <!-- Header content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Profile and highlight info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/img"
                    android:background="@drawable/circle_white_background"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highlight"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="December 3, 2023"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <!-- Close button -->
            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/close"
                android:tint="@color/white" />
        </LinearLayout>

        <!-- Music info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/music"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist â€¢ Song Title >"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:paddingStart="6dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Floating Heart Reactions -->
    <LinearLayout
        android:id="@+id/heartReactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationLayout14">

        <!-- Heart 1 (most recent) -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/heart"
            android:tint="#FF0000"
            android:alpha="1.0"
            android:layout_marginBottom="4dp" />

        <!-- Heart 2 -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/heart"
            android:tint="#FF0000"
            android:alpha="0.8"
            android:layout_marginBottom="4dp" />

        <!-- Heart 3 -->
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/heart"
            android:tint="#FF0000"
            android:alpha="0.6"
            android:layout_marginBottom="4dp" />

        <!-- Heart 4 -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/heart"
            android:tint="#FF0000"
            android:alpha="0.4"
            android:layout_marginBottom="4dp" />

        <!-- Heart 5 (oldest) -->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/heart"
            android:tint="#FF0000"
            android:alpha="0.2" />
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigationLayout14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Activity Tab (Active) -->
        <LinearLayout
            android:id="@+id/activityTabLayout14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/eye"
                android:tint="#8B4513" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:textColor="#8B4513"
                android:textSize="10sp"
                android:paddingTop="2dp" />
        </LinearLayout>

        <!-- Create Tab -->
        <LinearLayout
            android:id="@+id/createTabLayout14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/reel"
                android:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:paddingTop="2dp" />
        </LinearLayout>

        <!-- Create Post Tab -->
        <LinearLayout
            android:id="@+id/createPostTabLayout14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/grid_plus"
                android:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Post"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:paddingTop="2dp" />
        </LinearLayout>

        <!-- Browse Tab -->
        <LinearLayout
            android:id="@+id/browseTabLayout14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/browse"
                android:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:paddingTop="2dp" />
        </LinearLayout>

        <!-- Send Tab -->
        <LinearLayout
            android:id="@+id/sendTabLayout14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/send"
                android:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:paddingTop="2dp" />
        </LinearLayout>

        <!-- More Tab -->
        <LinearLayout
            android:id="@+id/moreTabLayout14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/more"
                android:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:paddingTop="2dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
