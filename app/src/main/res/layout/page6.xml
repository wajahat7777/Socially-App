<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Status bar spacing -->
    <View
        android:id="@+id/statusBarSpacer"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top search row -->
    <LinearLayout
        android:id="@+id/searchRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/statusBarSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Search field (pill) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/search_bar_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search"
                android:contentDescription="Search"
                 app:tint="#8B4513" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Search"
                android:textColor="#999999"
                android:textSize="16sp"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Scan icon -->
        <ImageView
            android:id="@+id/scanIconImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/scanner"
            android:contentDescription="Scan"
            app:tint="#8B4513" />
    </LinearLayout>

    <!-- Category chips (horizontal) -->
    <HorizontalScrollView
        android:id="@+id/categoryChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/searchRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <!-- Chip template reused with small outline style -->
            <LinearLayout
                android:id="@+id/shopButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/search_bar_background"
                android:layout_marginEnd="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/shop"
                    android:contentDescription="Shop icon"
                    app:tint="#8B4513" />
                   
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop"
                    android:textColor="#8B4513"
                    android:textSize="14sp"
                    android:paddingStart="6dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/styleButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Style"
                android:textColor="#8B4513"
                android:textSize="14sp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center"
                android:background="@drawable/search_bar_background"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/sportsButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Sports"
                android:textColor="#8B4513"
                android:textSize="14sp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center"
                android:background="@drawable/search_bar_background"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/autoButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Auto"
                android:textColor="#8B4513"
                android:textSize="14sp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center"
                android:background="@drawable/search_bar_background"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/musicButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Music"
                android:textColor="#8B4513"
                android:textSize="14sp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center"
                android:background="@drawable/search_bar_background" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Scrollable image grid -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryChips">

        <GridLayout
            android:id="@+id/imageGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="1dp">

        <!-- Large tile -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="321dp"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:contentDescription="grid_1"
            android:scaleType="centerCrop"
            android:src="@drawable/img_2" />

        <!-- Tall tile -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="320dp"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:contentDescription="grid_2"
            android:scaleType="centerCrop"
            android:src="@drawable/img_4" />

        <!-- Medium tiles row (different heights for randomness) -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="183dp"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:contentDescription="grid_3"
            android:scaleType="centerCrop"
            android:src="@drawable/img_3" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="182dp"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:contentDescription="grid_4"
            android:scaleType="centerCrop"
            android:src="@drawable/img_4" />

        <!-- Mixed sizes -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="214dp"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:contentDescription="grid_5"
            android:scaleType="centerCrop"
            android:src="@drawable/img_5" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="219dp"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:contentDescription="grid_6"
            android:scaleType="centerCrop"
            android:src="@drawable/img" />

        <!-- Bottom large pair -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:contentDescription="grid_7"
            android:scaleType="centerCrop"
            android:src="@drawable/img_5" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:contentDescription="grid_8"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />
        </GridLayout>
    </ScrollView>

    <!-- Bottom handle -->
    <include
        android:id="@+id/bottomHandle6"
        layout="@layout/include_bottom_handle"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom navigation (Search active) -->
    <LinearLayout
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/bottomHandle6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/homeTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:contentDescription="Home"
                app:tint="#8B4513" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"
                android:contentDescription="Search"
                 app:tint="#8B4513" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/addnew"
                android:contentDescription="Add"
                 app:tint="#8B4513" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activityTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/like"
                android:contentDescription="Activity"
                 app:tint="#8B4513" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img"
                android:contentDescription="Profile"
                android:background="@drawable/circle_white_background"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:padding="2dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
