<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Status Bar Space -->
    <View
        android:id="@+id/statusBarSpace"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/statusBarSpace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Camera Icon -->
        <ImageView
            android:id="@+id/cameraIconImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:contentDescription="Camera"
            android:layout_marginEnd="16dp" />

        <!-- Socially Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Socially"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#8B4513"
            android:fontFamily="sans-serif-black"
            android:gravity="center" />

        <!-- Notification Bell with Badge -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/notificationBellImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/igstream"
                android:contentDescription="Notifications" />

            <!-- Notification Badge -->

        </RelativeLayout>

        <!-- Direct Message Icon -->
        <ImageView
            android:id="@+id/messageIconImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/send"
            android:contentDescription="Messages"
            app:tint="#8B4513" />

    </LinearLayout>

    <!-- Stories Section -->
    <HorizontalScrollView
        android:id="@+id/storiesScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <!-- Your Story -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/img"
                    android:contentDescription="Your Story"
                    android:background="@drawable/story_gradient_orange"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:outlineProvider="background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Story"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- karennne Story -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/img"
                    android:contentDescription="karennne"
                    android:background="@drawable/story_gradient_purple"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:outlineProvider="background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="karennne"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- zackjohn Story -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/img"
                    android:contentDescription="zackjohn"
                    android:background="@drawable/story_gradient_orange"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:outlineProvider="background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zackjohn"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- kieron_d Story -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/img"
                    android:contentDescription="kieron_d"
                    android:background="@drawable/story_gradient_purple"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:outlineProvider="background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kieron_d"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- craig_ Story -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/img"
                    android:contentDescription="craig_"
                    android:background="@drawable/story_gradient_orange"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:outlineProvider="background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="craig_"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Main Post -->
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/storiesScrollView"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Post Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Profile Picture -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img"
                    android:contentDescription="joshua_l"
                    android:background="@drawable/circle_white_background"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:padding="2dp"
                    android:layout_marginEnd="12dp" />

                <!-- Username and Location -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="joshua_l"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <!-- Verified Badge -->
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_launcher_foreground"
                            android:contentDescription="Verified"
                            android:layout_marginStart="4dp"
                            android:tint="#FF0000" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokyo, Japan"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:alpha="0.7" />

                </LinearLayout>

                <!-- Menu Dots -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/img_1"
                    android:contentDescription="Menu"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Post Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/img"
                android:contentDescription="Tokyo Street Scene"
                android:scaleType="centerCrop"
                android:background="@color/light_gray" />

            <!-- Post Interactions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Like Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/like"
                    android:contentDescription="Like"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    />

                <!-- Comment Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/comment"
                    android:contentDescription="Comment"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Share Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/send"
                    android:contentDescription="Share"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Image Dots -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/dot_selected_background"
                        android:layout_marginStart="44dp" />

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/dot_unselected_background"
                        android:layout_marginStart="6dp" />

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/dot_unselected_background"
                        android:layout_marginStart="6dp" />
                    />

                </LinearLayout>

                <!-- Save Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/save"
                    android:contentDescription="Save"
                    android:layout_marginStart="164dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Likes Count -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liked by craig_love and 44,686 others"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Post Caption -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="joshua_l"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="The game in Japan was amazing and I want to share some photos"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Tab -->
        <LinearLayout
            android:id="@+id/homeTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:contentDescription="Home"
                android:layout_marginBottom="4dp"
                android:tint="#8B4513" />



        </LinearLayout>

        <!-- Search Tab -->
        <LinearLayout
            android:id="@+id/searchTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"
                android:contentDescription="Search"
                android:layout_marginBottom="4dp"
                android:tint="#8B4513" />

        </LinearLayout>

        <!-- Add Tab -->
        <LinearLayout
            android:id="@+id/addTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/addnew"
                android:contentDescription="Add"
                android:layout_marginBottom="4dp"
                android:tint="#8B4513" />

        </LinearLayout>

        <!-- Activity Tab -->
        <LinearLayout
            android:id="@+id/activityTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/like"
                android:contentDescription="Activity"
                android:layout_marginBottom="4dp"
                android:tint="#8B4513" />

        </LinearLayout>

        <!-- Profile Tab -->
        <LinearLayout
            android:id="@+id/profileTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <!-- Profile Picture -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img"
                android:contentDescription="Profile"
                android:background="@drawable/circle_white_background"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:padding="2dp"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
